                                           type="checkbox"
                                           value="{{ luggage.name }}"
                                           id="flexCheckDefault">
                                    <label class="form-check-label" for="{{ luggage.name }}">
                                        Ajouter
                                    </label>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <h3 class="Ld_btn">Trousse de toilette</h3>
            <div class="d-flex flex-wrap justify-content-around ">
                {% for luggage in luggages %}
                    {% if luggage.category == 'Trousse de toilette' %}

                        <div class="card al-card-container" style="width: 10rem; margin-bottom: 1rem;">
                            <div class="al-image-card">
                                <img src="/assets/images/{{ luggage.image }}" class="card-img-top"
                                     alt="dessin de {{ luggage.name }}">
                            </div>
                            <div
                                class="card-body pt-1 pb-0 d-flex flex-column justify-content-end align-items-start">
                                <h5 class="card-title">{{ luggage.name }}</h5>
                                <div class="form-check">
                                    <input name="{{ luggage.name }}" class="form-check-input al-checkGreen"
                                           type="checkbox"
                                           value="{{ luggage.name }}"
                                           id="flexCheckDefault">
                                    <label class="form-check-label" for="{{ luggage.name }}">
                                        Ajouter
                                    </label>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="Ld_btn">
                <label class="form-label" for="city">Au fait on va dans quelle ville ?</label>
                <input class="form-control" type="text" name="city" id="city">
            </div>
            <button type="submit" class="btn btn-success d-flex mx-auto mb-5">C'est bon j'ai tout !</button>
        </form>
    </div>

{% endblock %}
