{% extends 'layout.html.twig' %}

{% block content %}
    <div class="Ld_btn">
        <h2>La selection</h2>
        <p>Ne partez plus jamais en oubliant des choses dans votre valise !</p>
    </div>
    <div>
        <form action="/luggage/result" method="post">

            <h3 class="Ld_btn">Vêtements</h3>

            <div class="d-flex flex-wrap justify-content-around">
                {% for luggage in luggages %}
                    {% if luggage.category == 'Vêtement' %}
                        <div class="card al-card-container" style="width: 10rem; margin-bottom: 1rem;">
                            <div class="al-image-card">
                                <img src="/assets/images/{{ luggage.image }}" class="card-img-top"
                                     alt="dessin de {{ luggage.name }}">
                            </div>
                            <div
                                class="card-body pt-1 pb-0 d-flex flex-column justify-content-end align-items-start">
                                <h5 class="card-title">{{ luggage.name }}</h5>
                                <div class="form-check">
                                    <input name="{{ luggage.name }}" class="form-check-input al-checkGreen"
                                           type="checkbox" value="{{ luggage.name }}"
                                           id="flexCheckDefault">
                                    <label class="form-check-label" for="{{ luggage.name }}">
                                        Ajouter
                                    </label>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>


            <h3 class="Ld_btn">Equipements</h3>
            <div class="d-flex flex-wrap justify-content-around ">
                {% for luggage in luggages %}
                    {% if luggage.category == 'Equipement' %}
