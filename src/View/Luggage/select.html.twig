                                           type="checkbox"
                                           value="{{ luggage.name }}"
                                           id="flexCheckDefault">
                                    <label class="form-check-label" for="{{ luggage.name }}">
                                        Ajouter
                                    </label>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <h3 class="Ld_btn">Electronique</h3>
            <div class="d-flex flex-wrap justify-content-around ">
                {% for luggage in luggages %}
                    {% if luggage.category == 'Electronique' %}
